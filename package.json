{
  "name": "@ojson/http",
  "version": "0.2.0",
  "description": "Composable HTTP client core for ojson platform",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc",
    "test": "pnpm -s run test:units:fast && pnpm -s run test:types",
    "test:units": "vitest --run",
    "test:units:fast": "vitest --run",
    "test:types": "tsc --noEmit",
    "test:coverage": "vitest --run --coverage",
    "test:coverage:fast": "vitest --run --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "http",
    "client",
    "fetch",
    "ojson"
  ],
  "author": {
    "name": "3y3",
    "email": "3y3@ya.ru",
    "url": "https://github.com/3y3"
  },
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@ojson/infra": "workspace:*"
  }
}
