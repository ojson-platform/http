{
  "name": "@ojson/http",
  "version": "0.2.0",
  "description": "Composable HTTP client core for ojson platform",
  "type": "module",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    }
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prebuild": "rm -rf build",
    "build": "tsc",
    "test": "npm run test:units:fast && npm run test:types",
    "test:units": "vitest --run",
    "test:units:fast": "vitest --run",
    "test:types": "tsc --noEmit",
    "test:coverage": "vitest --run --coverage",
    "test:coverage:fast": "vitest --run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\""
  },
  "keywords": [
    "http",
    "client",
    "fetch",
    "ojson"
  ],
  "author": {
    "name": "3y3",
    "email": "3y3@ya.ru",
    "url": "https://github.com/3y3"
  },
  "license": "ISC",
  "engines": {
    "node": ">=20.0.0"
  },
  "sideEffects": false,
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "prettier": "^3.7.4",
    "typescript": "^5.7.2",
    "vitest": "^3.2.3"
  }
}
